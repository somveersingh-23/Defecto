<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Table Header (Optional, for reference in first row) -->
        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F3F4F6"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Id"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Table Row Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/complaintTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N/A"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/complaintStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N/A"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/complaintType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N/A"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/complaintTimestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N/A"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Optional Image and Description (Expandable) -->
        <LinearLayout
            android:id="@+id/expandableContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/complaintImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Complaint Image" />

            <TextView
                android:id="@+id/complaintDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/complaintLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/complaintUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:padding="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>